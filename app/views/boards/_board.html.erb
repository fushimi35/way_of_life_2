<div class="p-4 md:w-1/3">
  <%= link_to board_path(board) do %>
    <div class="flex rounded-lg h-full bg-gray-100 p-8 flex-col">
      <div class="flex items-center mb-3">
        <h2 class="text-gray-900 text-lg title-font font-medium"><%= board.answers.find_by(question_id: 2).content %></h2>
      </div>
      <div class="flex-grow">
        <p class="leading-relaxed text-base"><%= board.title %></p>
        <p class="leading-relaxed text-base"><%= board.answers.find_by(question_id: 18).content %></p>
        <p class="leading-relaxed text-base"><%= board.answers.find_by(question_id: 23).content %></p>
        <p class="mt-3 text-indigo-500 flex items-center">Learn More
          <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
